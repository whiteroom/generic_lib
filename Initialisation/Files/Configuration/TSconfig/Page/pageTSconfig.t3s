


# --------------------------------------------------
# mod
#
mod {
	
	SHARED {
	  # Language configuration
	  # defaultLanguageLabel = Deutsch
	  # defaultLanguageFlag = de
	}
	
	# configure the "Web > Page" module to display content elements in a way to make sure that each default element is shown and next to it any translation found.
	web_layout.defLangBinding = 1
	
	## Backend-Layouts definieren
	web_layout.BackendLayouts {
	
		1 {
			title = Home (Landing Page)
			config {
				backend_layout {
					colCount = 1
					rowCount = 1
					rows {
						1 {
							columns {
								1 {
									name = Content
									colPos = 0
								}
							}
						}
					}
				}
			}
			icon = ../fileadmin/generic_lib/Resources/Public/Backend/Icons/be_default_home.svg
		}
		
		2 {
			title = Standard (use this)
			config {
				backend_layout {
					colCount = 1
					rowCount = 1
					rows {
						1 {
							columns {
								1 {
									name = Content
									colPos = 0
								}
							}
						}
					}
				}
			}
			icon = ../fileadmin/generic_lib/Resources/Public/Backend/Icons/be_1_columns.svg
		}
		
		
		3 {
			title = Erweitert (zweispaltig)
			config {
				backend_layout {
					colCount = 3
					rowCount = 1
					rows {
						1 {
							columns {
								1 {
									name = Content
									colPos = 0
									colspan = 2
								}
								2 {
									name = Sidebar
									colPos = 1
								}
							}
						}
					}
				}
			}
            icon = ../fileadmin/generic_lib/Resources/Public/Backend/Icons/be_2_columns.svg
		}





	}
	
	
	### Set the default image orientation (Nr. 25)
	wizards.newContentElement.wizardItems.common.elements.textmedia.tt_content_defValues.imageorient = 25
}



