# --------------------------------------------------
# RTE
#


RTE {

	default {
		# CSS file for RTE
		contentCSS = fileadmin/generic_lib/Resources/Public/StyleSheets/rte/rte.css
		
		# use typical installation, add what is needed, remove unnecessary
		# Available buttons are: blockstylelabel, blockstyle, textstylelabel, textstyle, fontstyle, fontsize, formatblock, blockquote, insertparagraphbefore, insertparagraphafter, lefttoright, righttoleft, language, showlanguagemarks, left, center, right, justifyfull, orderedlist, unorderedlist, definitionlist, definitionitem, outdent, indent, formattext, bidioverride, big, bold, citation, code, definition, deletedtext, emphasis, insertedtext, italic, keyboard, monospaced, quotation, sample, small, span, strikethrough, strong, subscript, superscript, underline, variable, textcolor, bgcolor, textindicator, editelement, showmicrodata, emoticon, insertcharacter, insertsofthyphen, line, link, unlink, image, table, user, abbreviation, findreplace, spellcheck, chMode, inserttag, removeformat, copy, cut, paste, pastetoggle, pastebehaviour, undo, redo, about, toggleborders, tableproperties, tablerestyle, rowproperties, rowinsertabove, rowinsertunder, rowdelete, rowsplit, columnproperties, columninsertbefore, columninsertafter, columndelete, columnsplit, cellproperties, cellinsertbefore, cellinsertafter, celldelete, cellsplit, cellmerge
		showButtons := addToList(textcolor, line, justifyfull, insertsofthyphen, blockquote, insertparagraphbefore, insertparagraphafter)
		showButtons := removeFromList(outdent, indent, italic, findreplace )
		
		# For clean copy / paste
		showButtons := addToList(pastetoggle)
		buttons.pastetoggle.setActiveOnRteOpen = 1
		buttons.pastetoggle.hidden = 1
		
		buttons.image.options.magic.maxWidth = 600
		buttons.image.options.magic.maxHeight = 600
		buttons.image.options.plain.maxWidth = 600
		buttons.image.options.plain.maxHeight = 600

    
		enableWordClean = 1
		removeTrailingBR = 1
		removeComments = 1
		removeTags = center, font, o:p, sdfield, u
		removeTagsAndContents = link, meta, script, style, title
		
		
		proc.allowedClasses := addToList(align-justify)
		
		##assume any br is intentional
		proc.dontConvBRtoParagraph = 1
		

		# Attribute in der RTE Tabelle entfernen
		proc.entryHTMLparser_db.tags.table {
		     fixAttrib.style.unset = 1
		     fixAttrib.width.unset = 1
		     fixAttrib.height.unset = 1
		}
		
		proc.entryHTMLparser_db.tags.tr {
		     fixAttrib.style.unset = 1
		     fixAttrib.width.unset = 1
		     fixAttrib.height.unset = 1
		}
		
		proc.entryHTMLparser_db.tags.td {
		     fixAttrib.style.unset = 1
		     fixAttrib.width.unset = 1
		     fixAttrib.height.unset = 1
		}

		# proc.transformBoldAndItalicTags = 1   #### not working 7.6.14
		proc.exitHTMLparser_db.tags {
			allowTags = p,b,i,strong,em,blockquote,pre,h1,h2,h3,h4,h5,h6,span,div,address,sub,sup,hr
					b.remap = strong
					i.remap = em
				}

		proc.exitHTMLparser_rte.tags {
			allowTags = p,b,i,strong,em,blockquote,pre,h1,h2,h3,h4,h5,h6,span,div,address,sub,sup,hr
					strong.remap = b
					em.remap = i
				}
	}
	
	


	
	classes {
	
	}
	
	classesAnchor {
	
	}

}


